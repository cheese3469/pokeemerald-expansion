script RustboroCity_Gym_EventScript_GymIntro {
    lockall
    playse (SE_PIN)
	applymovement (LOCALID_RUSTBORO_GYM_GUIDE, Common_Movement_ExclamationMark)
    applymovement (LOCALID_RUSTBORO_GYM_GUIDE, Common_Movement_WalkInPlaceFasterLeft)
    applymovement (LOCALID_PLAYER, Common_Movement_WalkInPlaceFasterRight)
    msgbox (Rustboro_Gym_Text_GymIntro, MSGBOX_DEFAULT)
    applymovement (LOCALID_RUSTBORO_GYM_GUIDE, Common_Movement_FaceOriginalDirection)
    waitmovement (0)
    setvar (VAR_RUSTBORO_GYM_STATE, 1)
    releaseall
    end
}

text Rustboro_Gym_Text_GymIntro {
    "Hey!\n"
    "Thanks for visiting the RUSTBORO\l"
    "CITY POKéMON GYM. I'm your guide, and\l"
    "I'm here to tell you all about our\n"
    "recent renovations.\p"
    "This gym is now a lot bigger than how\n"
    "you may remember it. And we have a lot\l"
    "more GYM TRAINERS too. You may even\l"
    "find some helpful items lying around.\p"
    "And while our renovations took place,\n"
    "the GYM TRAINERS and ROXANNE had lots\l"
    "of time to expand their teams, so you\l"
    "may notice a wider range in the types\l"
    "of POKéMON used in the GYM.\p"
    "But most importantly, once you begin\n"
    "the gym's trial, you won't be able to\l"
    "leave until you fight our GYM LEADER,\l"
    "ROXANNE.\p"
    "So, once you step foot into the maze\n"
    "you see before you, there is no exit\l"
    "until you face off against ROXANNE.\l"
    "Good luck out there!$"
}

